
# --- Server / runtime
PORT=8080
NODE_ENV=development
LOG_LEVEL=info

# NODE_ENV=production
# LOG_LEVEL=error

# --- Storage & paths
# Where to store screenshots, audio, and result JSON
STORAGE_DIR=/app/data
# Temp dir for intermediate files
TEMP_DIR=/tmp

# --- Puppeteer / Chromium
# Path to chromium executable inside container/VM
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
PUPPETEER_EXECUTABLE_PATH=C:\Program Files\Google\Chrome\Application\chrome.exe
# Extra args (comma-separated) passed to puppeteer; keep defaults or add flags like --no-sandbox
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage


# ElevenLabs
ELEVENLABS_API_KEY=
ELEVENLABS_API_URL=

# GPTZero
GPTZERO_API_KEY=
GPTZERO_API_URL=


REDIS_URL=redis://localhost:6379
DB_PATH=./data/db.json  # Simple JSON DB path (for prototype). Use a real DB in production.

# --- Google Cloud 
GCP_PROJECT=
GCS_BUCKET=

#---Cloudinary 
CLOUD_NAME=
CLOUD_API_KEY=
CLOUD_API_SECRET=

# --- Operational flags
# If true, server will be reachable publicly (binds 0.0.0.0:PORT). Set false for local-only testing.
ENABLE_PUBLIC=true
# Comma-separated list of trusted origins for CORS (optional)
TRUSTED_ORIGINS=http://localhost:3000

# --- Rate limiting & safety
RATE_LIMIT_PER_MIN=10
QUEUE_CONCURRENCY=2
WORKER_RETRY_LIMIT=3
